{
  "$schema": "https://vega.github.io/schema/vega/v5.json",
  "background": "white",
  "padding": 5,
  "width": 1600,
  "height": 800,
  "title": {"text": "Map", "frame": "group"},
  "style": "cell",
  "data": [
    {
      "name": "Country Ids",
      "url": "https://raw.githubusercontent.com/namhptran/FIT3179-Week9/master/data/country_id_mapping.csv",
      "format": {"type": "csv", "delimiter": ","}
    },
    {
      "name": "World Map",
      "url": "https://raw.githubusercontent.com/namhptran/FIT3179-Week9/master/js/ne_50m.json",
      "format": {
        "type": "topojson",
        "feature": "ne_50m_admin_0_countries"
      },
      "transform": [
        {
          "type": "lookup",
          "from": "Country Ids",
          "key": "country_name",
          "fields": ["properties.NAME"],
          "values": ["country_id"]
        }
      ]
    },
    {
      "name": "Violent Events",
      "url": "https://raw.githubusercontent.com/namhptran/FIT3179-Week9/master/data/GEDEvent_v22_1.csv",
      "format": {"type": "csv", "delimiter": ","},
      "transform": [
        {
          "type": "filter",
          "expr": "datum.best != null"
        },
        {
          "type": "lookup",
          "from": "Country Ids",
          "key": "country_name",
          "fields": ["country"],
          "values": ["country_id"]
        }
      ]
    },
    {
      "name": "World Map with Deaths",
      "source": "World Map",
      "transform": [
        {
          "type": "filter",
          "expr": "datum.country_id != null"
        },
        {
          "type": "lookup",
          "from": "Violent Events",
          "key": "country_id",
          "fields": ["country_id"],
          "values": ["best"]
        }
      ]
    }
  ],
  "projections": [
    {
      "name": "projection",
      "type": "equalEarth"
    }
  ],
  "marks": [
    {
      "name": "Base Map",
      "type": "shape",
      "style": ["geoshape"],
      "from": {"data": "World Map"},
      "encode": {
        "update": {
          "fill": {"value": "lightgrey"},
          "stroke": {"value": "white"}
        }
      },
      "transform": [{"type": "geoshape", "projection": "projection"}]
    },
    {
      "name": "Coloured Map",
      "type": "shape",
      "style": ["geoshape"],
      "from": {"data": "World Map with Deaths"},
      "encode": {
        "update": {
          "fill": {"scale": "color", "field": "best"}
        }
      },
      "transform": [{"type": "geoshape", "projection": "projection"}]
    }
  ]
}