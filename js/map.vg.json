{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": "Deaths by Organised and State-based Violence (1989-2021)",
  "vconcat": [
    {
      "width": "container",
      "height": 1000,
      "view": {
        "fill": "lightblue"
      },
      "projection": {
        "type": "equalEarth"
      },
      "layer": [
        {
          "name": "World Map Base",
          "data": {
            "url": "./js/ne_50m.json",
            "format": {
              "type": "topojson",
              "feature": "ne_50m_admin_0_countries"
            }
          },
          "mark": {
            "type": "geoshape",
            "fill": "lightgrey",
            "stroke": "darkgrey"
          }
        },
        {
          "name": "Symbol Map",
          "data": {
            "url": "./data/GEDEvent_v22_1.csv",
            "format": {
              "type": "csv"
            }
          },
          "transform": [
            {
              "filter": "datum.best > 0"
            },
            {
              "filter": {
                "param": "time_brush"
              }
            }
          ],
          "mark": {
            "type": "circle",
            "fill": "darkred",
            "opacity": 0.3
          },
          "encoding": {
            "longitude": {
              "field": "longitude",
              "type": "quantitative"
            },
            "latitude": {
              "field": "latitude",
              "type": "quantitative"
            },
            "size": {
              "field": "best",
              "type": "quantitative",
              "legend": {
                "title": "Deaths (Individual Event)"
              },
              "scale": {
                "type": "linear"
              }
            }
          }
        },
        {
          "data": {
            "url": "./data/GEDEvent_v22_1.csv",
            "format": {
              "type": "csv"
            }
          },
          "transform": [
            {
              "filter": {
                "param": "time_brush"
              }
            },
            {
              "sort": [
                {
                  "field": "best",
                  "order": "descending"
                }
              ],
              "window": [
                {
                  "op": "rank",
                  "as": "ranking"
                }
              ]
            },
            {
              "filter": "datum.ranking == 1"
            },
            {
              "calculate": "'The most deadly conflict of; the selected period: ' + datum['best']",
              "as": "text_annotation_raw"
            },
            {
              "calculate": "split(datum.text_annotation_raw,';')",
              "as": "text_annotation"
            }
          ],
          "mark": {
            "type": "text",
            "align": "right",
            "dx": -8,
            "dy": -8,
            "baseline": "middle",
            "fontStyle": "italic"
          },
          "encoding": {
            "text": {
              "field": "text_annotation"
            }
          }
        }
      ]
    },
    {
      "width": "container",
      "height": 200,
      "mark": "line",
      "title": "Organised Violent Events",
      "data": {
        "url": "./data/GEDEvent_v22_1.csv",
        "format": {
          "type": "csv"
        }
      },
      "params": [
        {
          "name": "time_brush",
          "select": {
            "type": "interval",
            "encodings": [
              "x"
            ]
          }
        }
      ],
      "encoding": {
        "x": {
          "field": "date_start",
          "type": "temporal",
          "timeUnit": "yearmonthdate",
          "title": "Start date of event"
        },
        "y": {
          "aggregate": "count",
          "title": "Number of events",
          "scale": {
            "type": "linear"
          }
        }
      }
    }
  ]
}