{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": "Deaths by Organised and State-based Violence (1989-2021)",
  "vconcat": [
    {
      "width": "container",
      "height": 1000,
      "view": {
        "fill": "lightblue"
      },
      "projection": {
        "type": "equalEarth"
      },
      "layer": [
        {
          "name": "World Map Base",
          "data": {
            "url": "./js/ne_50m.json",
            "format": {
              "type": "topojson",
              "feature": "ne_50m_admin_0_countries"
            }
          },
          "mark": {
            "type": "geoshape",
            "fill": "lightgrey",
            "stroke": "darkgrey"
          }
        },
        {
          "name": "Symbol Map",
          "data": {
            "url": "./data/GEDEvent_v22_1.csv",
            "format": {
              "type": "csv"
            }
          },
          "params": [{
            "name": "region_param",
            "select": {
              "type": "point",
              "fields": [
                "region"
              ]
            },
            "bind": "legend"
          }
          ],
          "transform": [
            {
              "filter": "datum.best >= 100"
            },
            {
              "filter": "datum.best <= 10000"
            },
            {
              "filter": {
                "param": "deaths_brush"
              }
            }
          ],
          "mark": {
            "type": "circle"
          },
          "encoding": {
            "longitude": {
              "field": "longitude",
              "type": "quantitative"
            },
            "latitude": {
              "field": "latitude",
              "type": "quantitative"
            },
            "size": {
              "field": "best",
              "type": "quantitative",
              "legend": {
                "title": "Deaths (Individual Event)"
              },
              "scale": {
                "type": "linear"
              }
            },
            "color": {
              "field": "region",
              "type": "nominal"
            },
            "opacity": {
              "condition": {
                "param": "region_param",
                "value": 1
              },
              "value": 0.1
            }
          }
        }
      ]
    },
    {
      "data": {
        "url": "data/GEDEvent_v22_1.csv"
      },
      "width": "container",
      "height": 200,
      "title": "Deaths by Organised and State-based Violence (1989-2021)",
      "transform": [
        {
          "filter": "datum.best > 100"
        }
      ],
      "layer": [
        {
          "params": [
            {
              "name": "deaths_brush",
              "select": {
                "type": "interval",
                "encodings": [
                  "y"
                ]
              }
            }
          ],
          "mark": {
            "type": "point",
            "filled": true
          },
          "encoding": {
            "color": {
              "field": "region",
              "type": "nominal"
            },
            "x": {
              "field": "date_start",
              "type": "temporal",
              "title": "Start/End Date"
            },
            "y": {
              "field": "best",
              "type": "quantitative",
              "scale": {
                "type": "log"
              },
              "title": "Estimated deaths"
            },
            "opacity": {
              "condition": {
                "param": "region_param",
                "value": 1
              },
              "value": 0.1
            }
          }
        },
        {
          "mark": {
            "type": "point",
            "filled": true
          },
          "encoding": {
            "color": {
              "field": "region",
              "type": "nominal"
            },
            "x": {
              "field": "date_end",
              "type": "temporal"
            },
            "y": {
              "field": "best",
              "type": "quantitative",
              "scale": {
                "type": "log"
              }
            },
            "opacity": {
              "condition": {
                "param": "region_param",
                "value": 1
              },
              "value": 0.1
            }
          }
        },
        {
          "mark": {
            "type": "rule"
          },
          "encoding": {
            "color": {
              "field": "region",
              "type": "nominal"
            },
            "x": {
              "field": "date_start",
              "type": "temporal"
            },
            "x2": {
              "field": "date_end"
            },
            "y": {
              "field": "best",
              "type": "quantitative",
              "scale": {
                "type": "log"
              }
            },
            "y2": {
              "field": "best"
            },
            "opacity": {
              "condition": {
                "param": "region_param",
                "value": 1
              },
              "value": 0.1
            }
          }
        }
      ]
    }
  ]
}