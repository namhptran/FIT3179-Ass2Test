{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": "Deaths by Organised and State-based Violence (1989-2021)",
  "vconcat": [
    {
      "width": "container",
      "height": 1000,
      "view": {
        "fill": "lightblue"
      },
      "projection": {
        "type": "equalEarth"
      },
      "layer": [
        {
          "name": "World Map Base",
          "data": {
            "url": "./js/ne_50m.json",
            "format": {
              "type": "topojson",
              "feature": "ne_50m_admin_0_countries"
            }
          },
          "mark": {
            "type": "geoshape",
            "fill": "lightgrey",
            "stroke": "darkgrey"
          }
        },
        {
          "name": "Symbol Map",
          "data": {
            "url": "./data/GEDEvent_v22_1.csv",
            "format": {
              "type": "csv"
            }
          },
          "transform": [
            {
              "filter": "datum.best > 0"
            },
            {
              "filter": {
                "param": "time_brush"
              }
            }
          ],
          "mark": {
            "type": "circle",
            "fill": "darkred",
            "opacity": 0.3
          },
          "encoding": {
            "longitude": {
              "field": "longitude",
              "type": "quantitative"
            },
            "latitude": {
              "field": "latitude",
              "type": "quantitative"
            },
            "size": {
              "field": "best",
              "type": "quantitative",
              "legend": {
                "title": "Deaths (Individual Event)"
              },
              "scale": {
                "type": "linear"
              }
            },
            "tooltip": [
              {
                "field": "date_start",
                "type": "temporal",
                "title": "Start Date"
              },
              {
                "field": "country",
                "type": "nominal",
                "title": "Country"
              },
              {
                "field": "side_a",
                "type": "nominal",
                "title": "Side A"
              },
              {
                "field": "deaths_a",
                "type": "quantitative",
                "title": "Side A deaths"
              },
              {
                "field": "side_b",
                "type": "nominal",
                "title": "Side B"
              },
              {
                "field": "deaths_b",
                "type": "quantitative",
                "title": "Side B deaths"
              },
              {
                "field": "deaths_civilians",
                "type": "quantitative",
                "title": "Civilian deaths"
              },
              {
                "field": "deaths_unknown",
                "type": "quantitative",
                "title": "Unknown deaths"
              }
            ]
          }
        }
      ]
    },
    {
      "width": "container",
      "height": 200,
      "mark": "line",
      "title": "Deaths",
      "data": {
        "url": "./data/GEDEvent_v22_1.csv",
        "format": {
          "type": "csv"
        }
      },
      "params": [
        {
          "name": "time_brush",
          "select": {
            "type": "interval",
            "encodings": ["x"]
          }
        }
      ],
      "encoding": {
        "x": {
          "field": "date_start",
          "type": "temporal",
          "timeUnit": "yearmonthdate"
        },
        "y": {
          "aggregate": "sum",
          "field": "best",
          "scale": {
            "type": "linear",
            "domain": [0, 120000]
          }
        }
      }
    }
  ]
}